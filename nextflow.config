profiles {
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
    }
}

process {
    withName: 'DISK_INSPECTION' {
        container = 'ubuntu:22.04'
    }
}

params {
    input_file = "s3://ngi-igenomes/igenomes/Homo_sapiens/Ensembl/GRCh37/Annotation/Variation/Homo_sapiens.vcf"
}