// S3 FASTQ Comparison Pipeline Configuration

params {
    // S3 FASTQ file path for testing - replace with your actual S3 path
    s3_fastq_file = null
    
    // Output directory
    outdir = './results'
}

// Process configuration
process {
    // Default process settings
    errorStrategy = 'retry'
    maxRetries = 2
    
    // Resource allocation
    cpus = 1
    memory = '6 GB'
}

// Docker/container settings
docker {
    enabled = true
    runOptions = '-u $(id -u):$(id -g)'
}

// Enable AWS S3 integration
plugins {
    id 'nf-amazon'
}

// Manifest
manifest {
    name = 'S3 FASTQ File Handling Comparison'
    description = 'Compare native Nextflow S3 handling vs AWS CLI string-based approach for FASTQ files using FastQC'
    version = '2.0.0'
    mainScript = 'main.nf'
}